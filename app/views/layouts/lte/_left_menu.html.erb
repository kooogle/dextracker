<section class="sidebar">
  <div class="user-panel">
    <div class="pull-left image">
      <img src="<%= image_path('favicon.png')%>" class="img-circle" alt="User Image">
    </div>
    <div class="pull-left info">
      <p><%= current_user.email.split('@')[0] %></p>
      <a href="#"><i class="fa fa-circle text-success"></i> <%= current_user.role %></a>
    </div>
  </div>
  <form action="#" method="get" class="sidebar-form">
    <div class="input-group">
      <input type="text" name="q" class="form-control" placeholder="Search...">
      <span class="input-group-btn">
        <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
        </button>
      </span>
    </div>
  </form>
  <ul class="sidebar-menu">
    <li class="header">菜单导航</li>
    <li class="treeview <%= 'active' if controller_name == 'exchanges' %>">
      <a href="<%= backend_exchanges_path %>" target="_self">
        <i class="fa fa-exchange"></i> <span> 交易市场</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'snapshots' %>">
      <a href="<%= backend_snapshots_path %>" target="_self">
        <i class="fa fa-usd"></i> <span> 资产快照</span>
      </a>
    </li>

    <li class="header">设置管理</li>

  </ul>
</section>