<%= content_for(:title,  '交易市场 | Exchange') %>
<meta http-equiv="refresh" content="60">
<section class="content-header">
  <h1>
    市场 <small>信息预览</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="ion-home"></i> Dashboard</a></li>
    <li class="active"><i class="ion-easel"></i> 市场列表</li>
  </ol>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <a href="<%= new_backend_exchange_market_path(@exchange) %>" class="btn bg-primary btn-flat"><i class="ion-plus"></i> 添加市场</a>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-sm-12">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
            <tr>
              <th tabindex="0" aria-controls="example1" style="text-align: center">交易所</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">市场币</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">标的币</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">操作</th>
            </tr>
            </thead>
            <tbody>
            <% @markets.each do |item| %>
              <tr style="text-align: center">
                <td><%= item.exchange.type %></td>
                <td>[数量精度:<%= item.precision %>]&nbsp;&nbsp;<%= item.base %> </td>
                <td><%= item.quote %></td>
                <td style="text-align: left; width: 400px;">
                  <a href="<%= edit_backend_exchange_market_path(@exchange,item) %>" class="btn bg-orange btn-flat" title="编辑">
                    <i class="icon ion-edit"></i>&nbsp;改
                  </a>
                  <a href="<%= backend_exchange_market_path(@exchange,item) %>" class="btn bg-red btn-flat" data-method="delete" data-confirm="确定删除吗？" title="删除">
                    <i class="icon ion-trash-b"></i>&nbsp;删
                  </a>
                  <a href="<%= backend_market_orders_path(item) %>" class="btn bg-green btn-flat" title="市场订单">
                    <i class="icon ion-ios-book"></i>&nbsp;订单
                  </a>
                  <a href="<%= backend_market_trades_path(item) %>" class="btn bg-navy btn-flat" title="交易记录">
                    <i class="icon ion-ionic"></i>&nbsp;交易
                  </a>
                  <a href="<%= backend_market_periods_path(item) %>" class="btn bg-aqua btn-flat" title="收益周期">
                    <i class="fa fa-handshake-o"></i>&nbsp;收益
                  </a>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-5">
          <div class="dataTables_info" id="example1_info" role="status" aria-live="polite"><h5>总计：【<%= @markets.count %>】</h5></div>
        </div>
        <div class="col-sm-12">
          <div class="dataTables_paginate paging_simple_numbers">
            <%= will_paginate @markets, :class=>'apple_pagination' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>