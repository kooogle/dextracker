<%= content_for(:title,  '定时首发') %>
<section class="content-header">
  <h1>
    定时首发 <small>信息预览</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="ion-home"></i> Dashboard</a></li>
    <li class="active"><i class="ion-paper-airplane"></i> 定时首发</li>
  </ol>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <a href="<%= new_backend_launchpad_path %>" class="btn bg-primary btn-flat"><i class="ion-plus"></i> 添加</a>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-sm-12">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
            <tr>
              <th tabindex="0" aria-controls="example1" style="text-align: center">交易平台</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">交易对</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">定投资金</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">限定买价</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">首发时间</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">状态</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center;width: 240px">操作</th>
            </tr>
            </thead>
            <tbody>
              <% @launchpads.each do |item| %>
                <tr style="text-align: center">
                  <td><%= item.exchange.info %></td>
                  <td><%= item.symbol %></td>
                  <td><%= item.funds %>&nbsp;<%= item.quote %></td>
                  <td><%= item.limit_bid %>&nbsp;<%= item.quote %></td>
                  <td><%= item.launch_at.short %></td>
                  <td><%= item.state %></td>
                  <td>
                    <a href="<%= edit_backend_launchpad_path(item) %>" class="btn bg-orange btn-flat" title="编辑">
                      <i class="icon ion-edit"></i>&nbsp;改
                    </a>
                    <a href="<%= backend_launchpad_path(item) %>" class="btn bg-red btn-flat" data-method="delete" data-confirm="确定删除吗？" title="删除">
                      <i class="icon ion-trash-b"></i>&nbsp;删
                    </a>
                    <a href="<%= deploy_backend_launchpad_path(item) %>" class="btn bg-green btn-flat" data-confirm="确定要部署该任务吗？">
                      <i class="icon ion-jet"></i>&nbsp;部署
                    </a>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-5">
          <div class="dataTables_info" id="example1_info" role="status" aria-live="polite"><h5>总计：【<%= @launchpads.count %>】</h5></div>
        </div>
        <div class="col-sm-12">
          <div class="dataTables_paginate paging_simple_numbers">
            <%= will_paginate @launchpads, :class=>'apple_pagination' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>