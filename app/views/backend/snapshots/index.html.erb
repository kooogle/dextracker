<%= content_for(:title,  '资产快照 | 收益追踪') %>
<section class="content-header">
  <h1>
    资产快照 <small>资产快照</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
    <li class="active"><i class="fa fa-exchange"></i> 资产列表</li>
  </ol>
</section>
<section class="content">
  <div class="box box-primary">

    <div class="box-body">
      <div class="row">
        <div class="col-sm-12">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
            <tr>
              <th tabindex="0" aria-controls="example1" style="text-align: center">所有人</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">交易所</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">周期</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">时间</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">预估USDT</th>
            </tr>
            </thead>
            <tbody>
              <% @snapshots.each do |item| %>
                <tr>
                  <td><%= item.exchange.remark %></td>
                  <td><%= item.market %></td>
                  <td><%= item.period %></td>
                  <td><%= item.time_stamp.to_time.to_s(:long) %></td>
                  <td><%= item.estimate %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-5">
          <div class="dataTables_info" id="example1_info" role="status" aria-live="polite"><h5>总计：【<%= @snapshots.count %>】</h5></div>
        </div>
        <div class="col-sm-12">
          <div class="dataTables_paginate paging_simple_numbers">
            <%= will_paginate @snapshots, :class=>'apple_pagination' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>