<%= content_for(:title,  '交易市场 | 收益追踪') %>
<section class="content-header">
  <h1>
    市场 <small>信息预览</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="ion-home"></i> Dashboard</a></li>
    <li class="active"><i class="ion-flag"></i> 市场列表</li>
  </ol>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <a href="<%= new_backend_exchange_path %>" class="btn bg-primary btn-flat"><i class="ion-plus"></i> 添加交易所</a>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-sm-12">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
            <tr>
              <th tabindex="0" aria-controls="example1" style="text-align: center">交易所</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">所有人</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">API-KEY</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">API-SECRET</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">操作</th>
            </tr>
            </thead>
            <tbody>
              <% @exchanges.each do |item| %>
                <tr>
                  <td><%= item.type %></td>
                  <td><%= item.remark %></td>
                  <td><span style="word-break:break-all;overflow:auto;"><%= item.app_key %></span></td>
                  <td><span style="word-break:break-all;overflow:auto;"><%= item.app_secret %></span></td>
                  <td style="text-align: left; min-width: 300px;">
                    <a href="<%= edit_backend_exchange_path(item) %>" class="btn bg-orange btn-flat" title="编辑">
                      <i class="icon ion-edit"></i> 改
                    </a>
                    <a href="<%= backend_exchange_path(item) %>" class="btn bg-red btn-flat" data-method="delete" data-confirm="确定删除吗？" title="删除">
                      <i class="icon ion-trash-b"></i> 删
                    </a><br><br>
                    <a href="<%= backend_exchange_snapshots_path(item) %>" class="btn bg-gray btn-flat" title="资产快照">
                      <i class="icon ion-camera"></i> 快照
                    </a>
                    <a href="<%= backend_exchange_accounts_path(item) %>" class="btn bg-navy btn-flat" title="账户钱包">
                      <i class="icon ion-briefcase"></i> 钱包
                    </a>
                    <a href="<%= backend_exchange_markets_path(item) %>" class="btn bg-olive btn-flat" title="账户钱包">
                      <i class="icon ion-easel"></i> 市场
                    </a>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-5">
          <div class="dataTables_info" id="example1_info" role="status" aria-live="polite"><h5>总计：【<%= @exchanges.count %>】</h5></div>
        </div>
        <div class="col-sm-12">
          <div class="dataTables_paginate paging_simple_numbers">
            <%= will_paginate @exchanges, :class=>'apple_pagination' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>