<%= content_for(:title,  '平台公告') %>
<section class="content-header">
  <h1>
    平台公告
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="ion-home"></i> Dashboard</a></li>
    <li class="active"><i class="ion-chatbox"></i> 平台公告</li>
  </ol>
</section>
<section class="content">
  <div class="box box-primary">

    <div class="box-body">
      <div class="row">
        <div class="col-sm-12">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
            <tr>
              <th tabindex="0" aria-controls="example1" style="text-align: center">来源</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">标题链接</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">时间</th>
            </tr>
            </thead>
            <tbody>
              <% @announces.each do |item| %>
                <tr>
                  <td><%= item.source %></td>
                  <td>
                    <a href="<%= backend_announce_path(item) %>"  data-method="delete" data-confirm="确定删除吗？" title="删除">
                      <i class="icon ion-trash-b"></i>
                    </a>
                    <a href="<%= item.link %>" target="_blank"><%= item.title %></a>
                  </td>
                  <td><%= item.created_at.long %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-5">
          <div class="dataTables_info" id="example1_info" role="status" aria-live="polite"><h5>总计：【<%= @announces.count %>】条</h5></div>
        </div>
        <div class="col-sm-12">
          <div class="dataTables_paginate paging_simple_numbers">
            <%= will_paginate @announces, :class=>'apple_pagination' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>