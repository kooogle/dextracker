<meta http-equiv="refresh" content="600">
<div class="wrapper" style="padding:15px 15px;">
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
              <div class="inner">
                <h3>150</h3>
                <p>当前资金总量</p>
              </div>
              <div class="icon">
                <i class="ion ion-bag"></i>
              </div>
              <a href="#" class="small-box-footer"> &nbsp;</a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
              <div class="inner">
                <h3>53<sup style="font-size: 20px">%</sup></h3>

                <p>当前交易市场</p>
              </div>
              <div class="icon">
                <i class="ion ion-stats-bars"></i>
              </div>
              <a href="#" class="small-box-footer"> &nbsp;</a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
              <div class="inner">
                <h3>44</h3>

                <p>今天交易次数</p>
              </div>
              <div class="icon">
                <i class="ion ion-person-add"></i>
              </div>
              <a href="#" class="small-box-footer"> &nbsp;</a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
              <div class="inner">
                <h3>65</h3>

                <p>本周交易次数</p>
              </div>
              <div class="icon">
                <i class="ion ion-pie-graph"></i>
              </div>
              <a href="#" class="small-box-footer"> &nbsp;</a>
            </div>
          </div>
          <!-- ./col -->
        </div>
      <% @exchanges.each do |user|%>
        <% colors = ['primary', 'secondary', 'success','info', 'warning', 'danger', 'dark' , 'lightblue', 'navy', 'olive'] %>
        <div class="row">
          <!-- Left col -->
          <section class="col-lg-6 connectedSortable">
            <div class="card">
              <div class="card-header bg-gradient-<%= colors.sample %>">
                <h3 class="card-title">
                  <i class="fas fa-chart-pie mr-1"></i>
                  <%= user.remark + user.type %>最近两周收益趋势差比
                </h3>
                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fa fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fa fa-times"></i>
                  </button>
                </div>
              </div>
              <div class="card-body">
                <div class="tab-content p-0">
                  <!-- Morris chart - Sales -->
                  <div class="chart tab-pane active" id="revenue-chart"
                       style="position: relative; height: 350px;">
                      <canvas id="<%= user.two_weeks_diff_chart %>" height="300" style="height: 300px;"></canvas>
                   </div>
                </div>
              </div><!-- /.card-body -->
            </div>
          </section>

          <section class="col-lg-6 connectedSortable">
            <div class="card bg-gradient-<%= colors.sample %>">
              <div class="card-header">
                <h3 class="card-title">
                  <i class="fas fa-map-marker-alt mr-1"></i>
                  <%= user.remark + user.type %> 最近24小时收益趋势
                </h3>
                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fa fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fa fa-times"></i>
                  </button>
                </div>
                <!-- /.card-tools -->
              </div>
              <div class="card-body">
                <div class="tab-content p-0">
                  <!-- Morris chart - Sales -->
                  <div class="chart tab-pane active" id="revenue-chart" style="position: relative; height: 350px;">
                      <canvas id="<%= user.day_change_chart %>" height="300" style="height: 300px;"></canvas>
                   </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
      <% end %>
    </section>
</div>
<%= content_for :script_footer do %>
  <script type="text/javascript">
    $( document ).ready(function() {
      <% @exchanges.each do |user|%>
        <% user_weeks = user.two_weeks_diff_data %>;
        last_two_weeks_diff("<%= user.two_weeks_diff_chart %>", <%= raw user_weeks[:time]%>, <%= raw user_weeks[:last_week]%>, <%= raw user_weeks[:this_week]%>);
        <% user_days = user.day_change_data %>
        hours_24_income("<%= user.day_change_chart %>", <%= raw user_days[:time] %>, <%= raw user_days[:data] %>);
      <% end %>
    });
  </script>
<% end %>
